                    //alert(ps);
                    if (ps == null || ps == "") {
                        dialog("请选择你需要投票的人员后进行操作！", "alert");
                        return false;
                    } else {
                        $.ajax({
                            type: 'POST',
                            url: "Operation.ashx?type=dz",
                            data: { tmpid: ps, tmpopenid: $("#hdInfo").val(), tmpext1: "59"
                            },
                            dataType: "json",
                            success: function (result) {
                                if (result.ist == "0") {
                                    dialog('您的票数已投完,请明天继续');
                                    return false;
                                } else if (result.ist == "3") {
                                    dialog('非法访问！');
                                    return false;
                                } else if (result.ist == "4") {
                                    dialog('投票时间已过，请继续关注！');
                                    return false;
                                } else if (result.ist == "5") {
                                    dialog('非法访问，请通过正规渠道进行操作！');
                                    return false;
                                } else if (result.ist == "6") {
                                    dialog('搜索微信公众号“信达地产上海公司”关注后才能投票哦！');
                                    return false;
                                }
                                else {
                                    //$("#thumb_" + pid).removeClass().addClass("icon-thumbs-up2");
                                    $("#sp" + ps).text(result.ismsgs);
                                    dialog("您已投票成功！");
                                    return false;
                                }
                            },
                            error: function () { }
                        });
                    }
                })
            }
        });
        function dialog(msg, type) {
            window.dia1 = new mo.Dialog({
                content: msg,
                type: type
            });
        }
        function getlist() {
            $.ajax({
                type: 'POST',
                url: "Operation.ashx",
                data: { type: "gtlist", tmpinfo: $("#hdInfo").val() },
                dataType: "json",
                success: function (result) {
                    alert(result);
                    var st = $(".strformat").html();
                    var list1 = "";
                    if (result.count < 1) {

                    } else {
                        $.each(result.result, function (i, n) {
                            list1 += String.format(st, (i + 1), (i + 1), n.orders + "票") + "<br/>";
                        });
                        $(".str1").append(list1);
                    }
                }, error: function (e) { alert(e) }
